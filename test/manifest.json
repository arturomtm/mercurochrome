{
  // mandatory entries
  "manifest_version": 2,
  "name": "mercurochrome_test",
  "version": "0.0.2",
  // optional info
  "description": "Test extension for mercurochrome",
  "author": "arturomtm@gmail.com",
  // extension config
  "background": {
    "persistent": true,
    "scripts": ["build/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script_loader.js", "build/content.js"]
    }
  ],
  "web_accessible_resources": [
    "build/script.js"
  ]
}
